@{
    Layout = "/Views/Shared/Layout/_LayoutStore.cshtml";
}

@model IEnumerable<CarritoModelo>




<div class="container">
    <main>
        <div class="py-5 text-center">
            <h2>Carrito</h2>
        </div>
        <table class="table-bordered table-striped align-content-center" id="TablaProductos">
            <thead>
                <tr>

                    <th>Nombre de usuario</th>
                    <th>Nombre del producto</th>
                    <th>Precio Unitario</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>



                </tr>
            </thead>

            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.UserName</td>
                        <td>@p.ProductoName</td>
                        <td>@p.PrecioUnitario</td>
                        <td>@p.Cantidad</td>
                        <td>@p.Subtotal</td>




                        <td class="center">

                            <a href="/Carrito/EliminarCarrito" class="btn btn-danger  btn-eliminar" style="width:100px">
                                <i class="fas fa-trash-alt"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</div>

<br/>

<a href="@Url.Action("pago")"> <input type="submit" class="btn btn-primary mb-4 bg-danger" value="Continuar" /></a>





@section Scripts {


    <script src="~/lib/datatables.net/jquery.dataTables.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('#TablaProductos').DataTable();

        });


        $(document).on('click', '.btn-eliminar', function (event) {
            var json = $(this).data("informacion");
            var card_producto = $(this).parents("div.card-producto");


    </script>

}