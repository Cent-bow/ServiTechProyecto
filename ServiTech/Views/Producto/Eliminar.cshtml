@{
    Layout = "/Views/Shared/Layout/_LayoutAdmi.cshtml";
    @model ServiTech.Models.Producto
}

<form method="post" action="/Producto/Eliminar" class="form-horizontal">
    <input type="hidden" name="Id" id="Id" value="@Model.Id" />
    <input type="hidden" name="Nombres" id="Nombres" value="@Model.Nombre" />
    <input type="hidden" name="Apellidos" id="Apellidos" value="@Model.Descripcion" />
    <input type="hidden" name="TelefonoMovil" id="TelefonoMovil" value="@Model.Imagen" />

    <h1> ¿Esta seguro que desea eliminar este producto?</h1>

    <button type="submit" class="btn btn-danger">Eliminar producto</button> <br/>

    <a href="@Url.Action("IndexAdmi")"> <input type="submit" class="btn btn-success mb-4 bg-" value="Cancelar" /></a>

</form>
