@{

    Layout = "/Views/Shared/Layout/_LayoutStore.cshtml";
    @model IEnumerable<Producto>


}



<div>

    @foreach (var a in Model)
    {
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@a.Imagen" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Card title @a.Nombre</h5>
            <p class="card-text">@a.Descripcion Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
    }


</div>
