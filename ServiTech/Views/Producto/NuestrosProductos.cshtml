
@{
    Layout = "/Views/Shared/Layout/_LayoutStore.cshtml";
}



@model IEnumerable<Producto>


<div class="container">

    <div class="row">

        @foreach (var item in Model)
        {


            <div class="col-lg-4">

                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" id="img" src="@item.Imagen" alt="Card image cap">
                    <div class="card-body">
                        <center> <h5 class="card-title"> @item.Nombre</h5></center>
                        <center>   <p class="card-text">$ @item.Precio </p></center> <br/>
                        <center> <a href="#" class="btn btn-block border-dark">Agregar al carrito</a></center> <p/>
                        <center><a href="/Producto/DetalleUsuario" class="btn btn-block border-dark" >Ver detalle</a></center>
                    </div>

                </div>
            </div>

        }
    </div>
    </div>

<style>
    #img{
        width:286px;
        height:220px;

    }
</style>